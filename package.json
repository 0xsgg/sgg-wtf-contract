    "dotenv": "^16.4.1",
    "hardhat": "^2.26.2",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^1.4.3",
    "solhint": "^4.1.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
